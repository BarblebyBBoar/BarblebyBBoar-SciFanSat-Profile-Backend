{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "fullName",
      "required": true
    },
    "bio": {
      "type": "richtext",
      "localized": true
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "websiteUrl": {
      "type": "string",
      "required": false
    },
    "twitterHandle": {
      "type": "string",
      "required": false
    },
    "linkedInUrl": {
      "type": "string",
      "required": false
    },
    "clerkUserId": {
      "type": "string",
      "unique": true,
      "required": true
    }
  }
}
